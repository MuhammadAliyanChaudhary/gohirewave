<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.gohirewave.jobsapp.activities.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_saved_jobs"
        android:name="com.gohirewave.jobsapp.activities.ui.dashboard.DashboardFragment"
        android:label="@string/title_saved_jobs"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_applied_jobs"
        android:name="com.gohirewave.jobsapp.activities.ui.notifications.NotificationsFragment"
        android:label="@string/title_applied_jobs"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.gohirewave.jobsapp.activities.ui.notifications.NotificationsFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_notifications" />
</navigation>